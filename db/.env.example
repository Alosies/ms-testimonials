# PostgreSQL Configuration
POSTGRES_USER=testimonials_admin
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=testimonials

# Hasura Admin Secret
HASURA_ADMIN_SECRET=hasura-admin-secret

# JWT Secret (must be at least 32 characters, must match api/.env)
JWT_SECRET={"type":"HS256", "key": "your-jwt-secret-must-be-at-least-32-characters-long"}

# GraphQL URL (for testing scripts)
GRAPHQL_URL=http://localhost:8080/v1/graphql

# Enable GraphQL introspection (set to false in production for security)
ENABLE_INTROSPECTION=true

# Scheduled Triggers (Hasura cron jobs)
# Webhook secret for authenticating /jobs/* endpoints (must match api/.env)
# Generate with: openssl rand -hex 32
HASURA_WEBHOOK_SECRET=your-webhook-secret-min-32-chars

# API URL for Hasura to call webhooks
# Local Docker: http://host.docker.internal:4000
# Production: https://api.yourdomain.com
API_URL=http://host.docker.internal:4000
