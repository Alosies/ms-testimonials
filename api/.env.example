# Server
NODE_ENV=development
PORT=4000

# JWT
JWT_SECRET=your-jwt-secret-change-in-production

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Hasura
HASURA_URL=http://localhost:8080/v1/graphql
HASURA_ADMIN_SECRET=your-hasura-admin-secret

# AI Provider Configuration
# Options: openai, anthropic, google
AI_PROVIDER=openai

# OpenAI (default, cost-effective)
OPENAI_API_KEY=your-openai-api-key

# Anthropic (premium quality)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google Gemini (good balance of cost and quality)
GOOGLE_API_KEY=your-google-api-key

# Frontend
FRONTEND_URL=http://localhost:3000

# CORS (comma-separated list for multi-worktree setup)
# Includes: main (3000), yellow (3001), green (3002), blue (3003)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003

# Test API Configuration (for E2E testing only)
# Secret for authenticating test API requests (minimum 32 characters)
# Test routes are automatically enabled when this secret is configured
# Generate with: openssl rand -hex 32
TEST_API_SECRET=daeb977e95ac7d2f906facbc2c6f7e5687da91c7045c0822b3dcac0daee84ec7
