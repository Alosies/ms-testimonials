# Server
NODE_ENV=development
PORT=4000

# JWT
JWT_SECRET=your-jwt-secret-change-in-production

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Hasura
HASURA_URL=http://localhost:8080/v1/graphql
HASURA_ADMIN_SECRET=your-hasura-admin-secret
# Webhook secret for Hasura Scheduled Triggers (minimum 32 characters)
# Used to authenticate requests from Hasura to /jobs/* endpoints
# Generate with: openssl rand -hex 32
HASURA_WEBHOOK_SECRET=your-hasura-webhook-secret-change-in-production

# Database (for Drizzle ORM - complex queries)
DATABASE_URL=postgresql://postgres:postgrespassword@localhost:5432/postgres

# AI Provider Configuration
# Options: openai, anthropic, google
AI_PROVIDER=openai

# OpenAI (default, cost-effective)
OPENAI_API_KEY=your-openai-api-key

# Anthropic (premium quality)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google Gemini (good balance of cost and quality)
GOOGLE_API_KEY=your-google-api-key

# Frontend
FRONTEND_URL=http://localhost:3000

# Stripe (for credit purchases)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# CORS (comma-separated list for multi-worktree setup)
# Includes: main (3000), yellow (3001), green (3002), blue (3003)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003

# E2E Testing Support (Playwright tests)
