{
  "name": "@testimonials/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts --fix",
    "codegen": "graphql-codegen",
    "db:introspect": "drizzle-kit introspect",
    "db:validate": "tsx scripts/validate-drizzle-schema.ts",
    "db:sync": "pnpm db:introspect && pnpm db:validate"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.2",
    "@ai-sdk/google": "^3.0.2",
    "@ai-sdk/openai": "^3.0.2",
    "@aws-sdk/client-s3": "^3.800.0",
    "@aws-sdk/s3-request-presigner": "^3.800.0",
    "@hono/node-server": "^1.13.0",
    "@hono/zod-openapi": "^0.16.0",
    "@hono/zod-validator": "^0.4.0",
    "@openrouter/ai-sdk-provider": "^1.5.4",
    "@scalar/hono-api-reference": "^0.5.0",
    "@supabase/supabase-js": "^2.58.0",
    "@testimonials/core": "workspace:*",
    "ai": "^6.0.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.45.1",
    "google-auth-library": "^10.5.0",
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.0",
    "hono": "^4.6.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.0",
    "openai": "^4.67.0",
    "postgres": "^3.4.8",
    "stripe": "^20.3.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/schema-ast": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-graphql-request": "^6.2.0",
    "@graphql-codegen/typescript-operations": "^4.2.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.9.0",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0"
  }
}
