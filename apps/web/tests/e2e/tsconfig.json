{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../src/*"],
      "@e2e/*": ["./*"],
      "@e2e/entities/*": ["./entities/*"],
      "@e2e/shared/*": ["./shared/*"],
      "@e2e/features/*": ["./features/*"]
    }
  },
  "include": ["./**/*.ts"]
}
