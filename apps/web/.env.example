# Supabase
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# GraphQL (VITE_ prefix for client-side access)
VITE_HASURA_GRAPHQL_ENDPOINT=http://localhost:8080/v1/graphql

# Hasura (for codegen - server-side only, no VITE_ prefix)
HASURA_URL=http://localhost:8080/v1/graphql
HASURA_ADMIN_SECRET=hasura-admin-secret

# API
VITE_API_BASE_URL=http://localhost:4000

# Dev Server Port (for multi-worktree setup)
# Main: 3000, Yellow: 3001, Green: 3002, Blue: 3003
# Can also use: pnpm dev:web:yellow, pnpm dev:web:green, pnpm dev:web:blue
VITE_PORT=3000

# ImageKit CDN (for media URL generation)
# Get these from ImageKit dashboard: https://imagekit.io/dashboard/developer/api-keys
VITE_IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id
# Optional: Path prefix if ImageKit origin has a prefix (e.g., "testimonials")
VITE_IMAGEKIT_PATH_PREFIX=
