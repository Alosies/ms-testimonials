{
  "name": "@testimonials/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --open",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck": "vue-tsc --noEmit",
    "codegen": "graphql-codegen",
    "codegen:watch": "graphql-codegen --watch",
    "test:e2e": "playwright test --config=tests/e2e/playwright.config.ts",
    "test:e2e:dev": "E2E_BASE_URL=http://localhost:$(../../scripts/get-agent-port.sh) playwright test --config=tests/e2e/playwright.config.ts",
    "test:e2e:dev:ui": "E2E_BASE_URL=http://localhost:$(../../scripts/get-agent-port.sh) playwright test --config=tests/e2e/playwright.config.ts --ui",
    "test:e2e:dev:headed": "E2E_BASE_URL=http://localhost:$(../../scripts/get-agent-port.sh) playwright test --config=tests/e2e/playwright.config.ts --headed",
    "test:e2e:smoke": "playwright test --config=tests/e2e/playwright.config.ts --grep @smoke",
    "test:e2e:ui": "playwright test --config=tests/e2e/playwright.config.ts --ui",
    "test:e2e:headed": "playwright test --config=tests/e2e/playwright.config.ts --headed",
    "test:e2e:debug": "playwright test --config=tests/e2e/playwright.config.ts --debug",
    "test:e2e:codegen": "playwright codegen http://localhost:3001"
  },
  "dependencies": {
    "@apollo/client": "^3.11.0",
    "@imagekit/javascript": "^5.1.0",
    "@supabase/supabase-js": "^2.58.0",
    "@testimonials/icons": "workspace:*",
    "@vee-validate/zod": "^4.15.1",
    "@vue/apollo-composable": "^4.2.2",
    "@vueuse/core": "^11.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "graphql": "^16.9.0",
    "graphql-tag": "^2.12.6",
    "lucide-vue-next": "^0.562.0",
    "pinia": "^3.0.4",
    "pinia-plugin-persistedstate": "^4.0.0",
    "reka-ui": "^2.7.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.0",
    "vue-router": "^4.4.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/client-preset": "^4.3.0",
    "@graphql-codegen/introspection": "^5.0.0",
    "@graphql-codegen/schema-ast": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-operations": "^4.2.0",
    "@graphql-codegen/typescript-vue-apollo": "^4.1.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.1.0",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.6.1",
    "eslint": "^9.9.0",
    "eslint-plugin-vue": "^9.27.0",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.0",
    "unplugin-vue-router": "^0.10.0",
    "vite": "^5.4.0",
    "vue-tsc": "^2.0.0"
  }
}
